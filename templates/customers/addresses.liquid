                                    class="w-full {{ form_class }}"
                                    data-default="{{ form.province }}"
                                    autocomplete="address-level1">
                                  </select>
                                </div>
                              </div>
                            </div>
                            <div class="flex flex-row gap-1 text-left md:w-1/2">
                              {{ form.set_as_default_checkbox }}
