{% comment %} 
  {%- if section.settings.show_carousel_reassurance -%}
  <tail-carousel log="true" slidesToShow="xs:1 sm:1 lg:1 xl:1"  class="flex-1 w-full p-2 bg-white bg-opacity-50 rounded-md">
  <carousel-container class="">
  <carousel-content class="w-full">
  {% for block in section.blocks %}
  {%- if block.type == "reassurances" -%}
  <carousel-panel class="">
  <div class="max-w-[85%]">
  <span class="block font-bold text-sm">{{ block.settings.title }}</span>
  <div class="text-xs">{{ block.settings.text }}</div>
  </div>
  </carousel-panel>
  {%- endif -%}
  {% endfor %}
  </carousel-content>
  </carousel-container> 
  <carousel-dots class="absolute flex items-center justify-center right-3 top-[50%] translate-y-[-50%]">
  <carousel-dot class="w-[4px] h-[4px] mr-1 transition-all bg-white border border-gray-dark rounded-full selected:w-[8px] selected:h-[8px] selected:bg-gray-dark"></carousel-dot>
  </carousel-dots>
  </tail-carousel>
  {%- endif -%} 
{% endcomment %}
<div class="product-marquee w-full py-4 bg-green-light">
  <div class="flex items-center relative overflow-hidden overflow-x-scroll snap-mandatory snap-x gap-7 scrollbar-none px-6">
    {%- for block in section.blocks -%}
      {%- if block.type == "reassurances" -%}
        <div class="min-w-fit">
          <div class="flex items-center gap-4">
            {% if block.settings.svg != blank %}
              <img
                src="{{ block.settings.svg }}"
                class="object-contain !max-w-max"
                alt="{{ block.settings.svg.alt }}">
            {% else %}
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                class="lazy object-contain !max-w-[30px]"
                alt="{{ block.settings.image.alt }}">
            {% endif %}
            <p class="block text-sm text-green">{{ block.settings.text }}</p>
          </div>
        </div>
      {% endif %}
    {%- endfor -%}
  </div>
</div>