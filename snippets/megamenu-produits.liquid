<megamenu-sub class="flex gap-5 max-h-[80vh] overflow-y-auto overflow-y-auto-hidden ">
  {%- assign submenu_columns = 0 -%}
  {% if submenu != blank %}
    <div class="w-2/3 grid gap-x-5 gap-y-4 grid-cols-3 h-fit">
      {% for links in submenu.links %}
        <div class="flex flex-col justify-between shadow-lg rounded-lg p-5">
          <div>
            <ul class="leading-6">
              <li class="menu-list text-sm uppercase font-bold mb-2 Fredoka">
                <a href="{{ link.url }}">
                  {% if links.title contains "gelules" %}
                    gel
                   {% elsif links.title contains "gelules" %} 
                  gum
                  {% endif %}
                  {{ links.title }}
                </a>
              </li>
              {% for sublinks in links.links limit: 5 %}
                <li class="menu-list">
                  <a href="{{ child_link.url }}">
                    <span class="text-xs">{{ sublinks.title }}</span>
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <a class="block underline text-xs mt-5 text-right" href="/collections/all">Voir tous les produits</a>
        </div>
      {% endfor %}
    </div>
  {% endif %}
  <div class="w-1/3">
    {% render 'header-menu-featured-links', block: block, limit: 1 %}
  </div>

</megamenu-sub>

