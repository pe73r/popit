<megamenu-sub class="flex gap-5 max-h-[80vh] overflow-y-auto overflow-y-auto-hidden ">
  {%- assign submenu_columns = 0 -%}
  {% if submenu != blank %}
    <accordion-group class="w-2/3 grid gap-x-5 gap-y-4 grid-cols-2 h-fit">
      {% for links in submenu.links %}
        <accordion-element class="p-3 rounded-lg shadow-lg w-full h-fit">
          <accordion-trigger class="group">
            <accordion-header class="flex justify-between items-center">
              <div class="flex-1">
                <h3 class="flex gap-2 items-center">
                  {% render 'megamenu-title-icons', title: links.title %}
                  <span class="{{ class }} text-sm first-letter:uppercase">{{ links.title }}</span>
                </h3>
              </div>
              <accordion-icon class="group-expanded:rotate-180 transition-all origin-center h-[fit-content]">
                {% render 'icon-arrow-accordion' %}
              </accordion-icon>
            </accordion-header>
          </accordion-trigger>
          <accordion-content>
            <div class="flex gap-3">
              {% for sublinks in links.links limit: 5 %}
                <div
                  class="block w-1/5">
                  <a href="{{ child_link.url }}" class="flex flex-col items-center gap-2 mt-4">
                    <img src="https://cdn.shopify.com/s/files/1/0681/5494/9926/files/Rectangle_462.png?v=1674480399" alt="">
                    <span class="text-xs">{{ sublinks.title }}</span>
                  </a>
                </div>
              {% endfor %}
            </div>
          </accordion-content>
        </accordion-element>
        {% if forloop.last %} 
          <a class="block h-fit {% render "button", size:"small", color:"green", fullWidth: true, variation: "outlined" %}" href="/collections/all">Voir tous les produits</a>
        {% endif %}
      {% endfor %}
    </accordion-group>
  {% endif %}
  <div
    class="w-1/3">
    {% render 'header-menu-featured-links', block: block, limit: 1 %}
  </div>

</megamenu-sub>