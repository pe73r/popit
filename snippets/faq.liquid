<accordion-element class="py-6 border-b last:border-none faq">
  <accordion-trigger class="group">
    <accordion-header class="flex justify-between items-center">
      <div class="flex-1">
        <h3 class="text-sm md:text-base font-bold first-letter:uppercase" style="color:{{ section.settings.title_accordion_color }}">{{ block.settings.question }}</h3>
      </div>
      <accordion-icon class="duration-150 group-transition-all origin-center h-[fit-content]">
        <span class="icon-plus">{% render 'icon-accordion-plus', color: color %}</span>
        <span class="icon-minus hidden">{% render 'icon-accordion-minus', color: color %}</span>
      </accordion-icon>
    </accordion-header>
  </accordion-trigger>
  <accordion-content>
    <div class="text-xs md:text-sm mt-4" style="color:{{ section.settings.content_accordion_color }}">
      {{ block.settings.answer }}
    </div>
  </accordion-content>
</accordion-element>