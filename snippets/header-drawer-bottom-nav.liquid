<div class="p-5 mt-auto bg-green-light pb-8">
  <ul class="">
    {% for link in elements[0].settings.menu.links %}
      <li class="text-left p-1 text-sm">
        <a href="{{ link.url }}" class="block mt-1">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>

  {% if section.settings.show_search_mobile %}
    {% render "search-box-mobile" %}
  {% endif %}

  <div class="flex gap-2 mt-3">
    <a target="_blank" href="{{ settings.social_instagram_link }}">
      {%- render 'icon-instagram-green' -%}
    </a>
    <a target="_blank" href="{{ settings.social_facebook_link }}">
      {%- render 'icon-facebook-green' -%}
    </a>
    <a
      target="_blank"
      href="{{ settings.social_tiktok_link }}"
      class="social-link-bottom">
      {%- render 'icon-tiktok' -%}
    </a>
  </div>
</div>
<style>
  .social-link-bottom svg {
    width: 24px;
    height: 24px;
  }
</style>