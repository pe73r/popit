{% assign sizeClass = "px-12 py-4 text-sm tracking-wider" %}

<!-- SIZE -->
{% if size == "extralarge" %}
  {% assign sizeClass = "px-4 py-3 text-base md:px-24 md:py-3" %}
{% elsif size == "large" %}
  {% assign sizeClass = "px-4 py-3 text-sm md:px-16 md:py-3" %}
{% elsif size == "medium" %}
  {% assign sizeClass = "px-2 py-3.5 text-sm md:px-4 md:py-3.5" %}
{% elsif size == "small" %}
  {% assign sizeClass = "px-[12px] py-[11px] text-sm" %}
{% endif %}
<!-- COLOR & VARIATION -->
{% assign colorClass = "bg-white text-green" %}

<!-- COLOR OUTLINED-->
{% if variation == "outlined" %}
  {% if color == "green" %}
    {% assign colorClass = "ing-1 ring-green text-green hover:ring-2" %}
  {% endif %}
{% else %}
  {% if color == "green" %}
    {% assign colorClass = "bg-green text-white" %}
  {% endif %}
{% endif %}

{{ sizeClass }} {{ colorClass }}
{% if fullWidth == true %}
  w-full
{% endif %}
transition-all rounded-xl text-center