{% assign s = section.settings %}
<div class="py-8 md:py-12" style="background-color: {{ section.settings.bg_color }}">

  <div class="w-11/12 max-w-7xl mx-auto">
    {% if s.title != blank %}
      <h2 class="text-center text-2xl md:text-4xl xl:text-5xl xl:leading-9 font-bold pb-2 mb-4 lg:mb-8" style="color: {{ section.settings.color }}">{{ s.title }}</h2>
    {% endif %}

    {% if section.settings.image != blank %}
      <img
        class="lazy mx-auto {% if section.settings.imageMobile != blank %} hidden md:block {% endif %}"
        src="{{ section.settings.image | img_url: 'master'}}"
        alt="{{ section.settings.image.alt }}"
        loading="lazy"
        style="max-width:{{ section.settings.image_width }}px">

      <img
        class="lazy block md:hidden mx-auto"
        src="{{ section.settings.imageMobile | img_url: 'master'}}"
        alt="{{ section.settings.imageMobile.alt }}"
        loading="lazy"
        style="max-width:{{ section.settings.image_width }}px">
    {% else %}
      {{ 'image' | placeholder_svg_tag }}
    {% endif %}

    <div class="text-center mx-auto md:max-w-[75%]">
      {% if s.text != blank %}
        <div class="text-sm mt-3 md:mt-8" style="color: {{ section.settings.color }}">
          {{ s.text }}
        </div>
      {% endif %}
      {% if s.cta != blank %}
        <div class="mt-5 mx-auto">
          <a href="{{ s.ctaLink }}" class="text-sm {% render "button", color: "green", size: "large", variation: "outlined" %}">
            {{ s.cta }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Image banner With Text",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Images"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Banner image"
      },
      {
        "type": "image_picker",
        "id": "imageMobile",
        "label": "Banner image for mobile"
      },
      {
        "type": "text",
        "id": "title",
        "default": "Prenez soin de vous",
        "label": "Title"
      }, {
        "type": "richtext",
        "id": "text",
        "default": "<p>Notre mission est de vous rendre heureux, en meilleure santé, sans dégrader la planète.</p>",
        "label": "Text"
      }, {
        "type": "header",
        "content": "Button"
      }, {
        "type": "text",
        "id": "cta",
        "label": "Button label",
        "default": "À propos de nous"
      }, {
        "type": "url",
        "id": "ctaLink",
        "label": "Link "
      }, {
        "type": "header",
        "content": "colors"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#E3F2ED"
      }, {
        "type": "color",
        "id": "color",
        "label": "Title color",
        "default": "#1A1A1A"
      }
    ],
    "presets": [
      {
        "name": "Image Banner with Text"
      }
    ]
  }
{% endschema %}