<section class="flex flex-col justify-evenly w-full py-12"
  style="background-color: {{ section.settings.background_color}}">
  <h1 class=" text-center text-sm font-[900] uppercase md:text-base" style="color: {{ section.settings.header_color}}">
    {{ section.settings.subtitle }}
  </h1>
  <div class=" text-xl text-center font-[100] md:text-4xl" style=" color: {{ section.settings.text_color}} ">
    {{ section.settings.text }}
  </div> 
</section>
