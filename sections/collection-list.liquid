<section class="py-10 md:py-18" style="color: {{ section.settings.color }}; background-color: {{ section.settings.background_color }}">
  {%- if section.settings.subheading != blank or section.settings.title != blank -%}
    <header class="mb-10 text-center">
      {%- if section.settings.subheading != blank -%}
        <h3 class="text-xl">{{ section.settings.subheading | escape }}</h3>
      {%- endif -%}

      {%- if section.settings.title != blank -%}
        <h2 class="text-xl md:text-3xl">{{ section.settings.title | escape }}</h2>
      {%- endif -%}
    </header>
  {%- endif -%}
  <div class="hidden lg:block">
    <div class="flex justify-center text-center gap-8">
      {% for block in section.blocks %}
        <div class="text-center max-w-[200px]">
          <a href="{{ block.settings.url }}">
            {%- if block.settings.image != blank -%}
              {% render "image" image: block.settings.image, class: "w-full max-w-[120px] mx-auto" %}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'SnapSlider__Image' }}
            {%- endif -%}
            <h5 class="text-base lg:text-lg mt-5">{{ block.settings.heading }}</h5>
            <p class="text-xs md:text-sm">{{ block.settings.subheading }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="block lg:hidden">
    <div class="flex relative overflow-hidden overflow-x-scroll snap-mandatory snap-x ml-5 gap-4 scroller">
      {% for block in section.blocks %}
        <div class="min-w-[150px] text-center">
          <a href="{{ block.settings.url }}">
            {%- if block.settings.image != blank -%}
              {% render "image" image: block.settings.image, class: "w-full max-w-[100px] mx-auto" %}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'SnapSlider__Image' }}
            {%- endif -%}
            <h5 class="text-base mt-3">{{ block.settings.heading }}</h5>
            <p class="text-xs md:text-sm">{{ block.settings.subheading }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<style>
  .scroller::-webkit-scrollbar {
    display: none;
  }
</style>

