{% assign isDynamic = section.settings.dynamic_header %}
{% assign isSticky = section.settings.sticky_header %}
{% assign showAnnouncement = section.settings.show_announce_when_down %}

<header
  class="flex justify-between items-center w-full h-[60px] relative"
  data-dynamic="false"
  data-sticky="true"
  {% if showAnnouncement %}data-showAnnouncement="true"{% endif %}>

  {% render "header-drawer", links: section.settings.menu_desktop.links %}
  {% render "header-menu", links: section.settings.menu_desktop.links %}
</header>
{% schema %}
  {
    "name": "Header",
    "settings": [

      {
        "type": "header",
        "content": "Desktop navigation"
      },
      {
        "type": "link_list",
        "id": "menu_desktop",
        "default": "main-menu",
        "label": "Desktop menu"
      },
      {
        "type": "header",
        "content": "Mobile navigation"
      },
      {
        "type": "link_list",
        "id": "menu_mobile",
        "default": "main-menu",
        "label": "Mobile menu"
      }, {
        "type": "header",
        "content": "Mobile drawer"
      }, {
        "type": "text",
        "id": "feature_drawer_title",
        "label": "Featured title",
        "default": "Feature something great"
      }, {
        "type": "text",
        "id": "feature_drawer_subtitle",
        "label": "Featured subtitle"
      }, {
        "type": "url",
        "id": "feature_drawer_link",
        "label": "Featured link"
      }
    ],
    "blocks": [
      {
        "name": "Mobile Menu Tabs",
        "type": "mobile_tabs",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Label"
          },
          {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
          },
          {
            "type": "select",
            "id": "menu_style",
            "options": [
              {
                "value": "accordion",
                "label": "accordion"
              }, {
                "value": "block",
                "label": "block"
              }
            ],
            "default": "accordion",
            "label": "Menu style"
          },
          {
            "type": "header",
            "content": "Card"
          }, {
            "type": "image_picker",
            "id": "featured_link_image_1",
            "label": "Featured link image"
          }, {
            "type": "text",
            "id": "featured_link_subtitle_1",
            "label": "Featured link subtitle"
          }, {
            "type": "richtext",
            "id": "featured_link_title_1",
            "label": "Featured link title"
          }, {
            "type": "url",
            "id": "featured_link_1",
            "label": "Featured link"
          }
        ]
      }, {
        "name": "Mobile Menu bottom",
        "type": "mobile_bottom",
        "limit": 1,
        "settings": [
          {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
          }
        ]
      }, {
        "name": "Megamenu Desktop Besoins",
        "type": "megamenu",
        "settings": [
          {
            "type": "link_list",
            "id": "megamenu",
            "label": "Mega menu"
          },
          {
            "type": "header",
            "content": "Featured link"
          },
          {
            "type": "image_picker",
            "id": "featured_link_image_1",
            "label": "Featured link image"
          },
          {
            "type": "text",
            "id": "featured_link_subtitle_1",
            "label": "Featured link subtitle"
          }, {
            "type": "richtext",
            "id": "featured_link_title_1",
            "label": "Featured link title"
          }, {
            "type": "text",
            "id": "featured_link_button_1",
            "label": "Featured button"
          }, {
            "type": "url",
            "id": "featured_link_1",
            "label": "Featured link"
          }
        ]
      }, {
        "name": "Megamenu Desktop Produits",
        "type": "megamenu_produits",
        "settings": [
          {
            "type": "link_list",
            "id": "megamenu",
            "label": "Mega menu"
          },
          {
            "type": "header",
            "content": "Featured link"
          },
          {
            "type": "image_picker",
            "id": "featured_link_image_1",
            "label": "Featured link image"
          },
          {
            "type": "text",
            "id": "featured_link_subtitle_1",
            "label": "Featured link subtitle"
          }, {
            "type": "richtext",
            "id": "featured_link_title_1",
            "label": "Featured link title"
          }, {
            "type": "text",
            "id": "featured_link_button_1",
            "label": "Featured button"
          }, {
            "type": "url",
            "id": "featured_link_1",
            "label": "Featured link"
          }
        ]
      }
    ]
  }
{% endschema %}