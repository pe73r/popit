<div class="w-11/12 max-w-7xl mx-auto mb-14">
  <!-- breadcrumbs -->
  <div class="relative py-4">
    {% render 'breadcrumbs', class: 'text-[10px]' %}
  </div>
  <div class="flex flex-col md:flex-row gap-3 md:gap-5 lg:gap-8">
      <!-- main product card -->
      <div class="w-full relative md:sticky h-fit top-0 md:top-[100px] md:w-1/2 lg:w-7/12">
        {% render 'main-product-card' , product:product , show_dots:section.settings.show_dots %}
      </div>
      <!-- product info -->
      <div class="w-full h-full md:w-1/2 lg:w-5/12">
         <div class="flex flex-col-reverse md:flex-col gap-2">
          {% render 'product-icons' , product: product %}
          {% render 'product-info' , product: product %}
         </div>
         <div class="flex flex-col gap-2 mt-2">
           {% render 'payment-text-block', block: block %}
           {% render 'related-products', product: product %}
         </div> 
      </div>
   </div>
</div>

