<div class="py-20 w-11/12 max-w-[1120px] mx-auto">
  <div class="flex flex-col md:flex-row items-center gap-10">
    <div>
      <img class="m-auto mt-8 lazy" src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}">
    </div>
    <div class="text-center md:text-left">
      <h1 class="uppercase text-2xl md:text-5xl">{{ section.settings.title }}</h1>
      <h4 class="mt-4 text-base md:text-3xl">{{ section.settings.subtitle }}</h4>
      <div class="mt-5 md:mt-10 text-sm">
        {{ section.settings.text }}
      </div>
      <div class="flex mt-2 justify-center md:justify-start">
        {% if section.settings.cta  != blank %}
          <a href="{{ section.settings.ctaLink }}" class="text-sm mr-3 underline">
            {{ section.settings.cta }}
          </a>
        {% endif %}
        {% if section.settings.cta_2  != blank %}
          <a href="{{ section.settings.ctaLink_2 }}" class="text-sm mr-3 underline">
            {{ section.settings.cta_2 }}
          </a>
        {% endif %}
        {% if section.settings.cta_3  != blank %}
          <a href="{{ section.settings.ctaLink_3 }}" class="text-sm underline">
            {{ section.settings.cta_3 }}
          </a>
        {% endif %}
      </div>
      
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page 404",
  "settings": [
    
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "OUPS,"
      },
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "NOUS AVONS PERDU CETTE PAGE.<br><span>LE MUM BRAIN NOUS JOUE DES TOURS !</span> "
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Mais pas de problème, un de nos snacks et ça repart :"
      },
      {
        "type": "header",
        "content": "Links"
      },
      {
        "type": "text",
        "id": "cta",
        "label": "Button",
        "default": "Nos essentiels"
      },
      {
        "type": "url",
        "id": "ctaLink",
        "label": "Link"
      }, 
      {
        "type": "text",
        "id": "cta_2",
        "label": "Button",
        "default": "Nos snacks"
      },
      {
        "type": "url",
        "id": "ctaLink_2",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "cta_3",
        "label": "Button",
        "default": "Nouveautés"
      },
      {
        "type": "url",
        "id": "ctaLink_3",
        "label": "Link" 
      }
    ]
  }
{% endschema %}<script id="esc-redirects-404-script" src="https://easyredirects.esc-apps-cdn.com/app.js"></script>