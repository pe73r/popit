{% assign s = section.settings %}
<div
  class="py-10 md:py-12"
  style="background-color: {{ section.settings.bg_color }}">
  <div
    class="relative bg-gradiant w-11/12 max-w-7xl mx-auto rounded-xl flex flex-col md:flex-row justify-between items-center gap-5 md:gap-8 xl:gap-10 p-2 sm:p-3 md:p-8 xl:p-12">
    {% if s.label != blank %}
      <div
        class="block md:hidden absolute top-2 right-2 text-[10px] py-1 px-2 text-white font-bold bg-orange w-fit rounded-md mb-2 mx-auto md:mx-0">{{ s.label }}</div>
    {% endif %}
    <div
      class="w-full md:w-5/12">
      {% if section.settings.image != blank %}
        <img
          class="lazy mx-auto max-w-[250px] md:max-w-full"
          src="{{ section.settings.image | img_url: 'master'}}"
          alt="{{ section.settings.image.alt }}"
          loading="lazy"
          style="max-width:{{ section.settings.image_width }}px">
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div
      class="w-full md:w-7/12 text-center md:text-left">
      {% if s.label != blank %}
        <div
          class="hidden md:block text-xs py-1 px-2 text-white font-bold bg-orange w-fit rounded-md mb-3 mx-auto md:mx-0">{{ s.label }}</div>
      {% endif %}

      {% if s.subtitle != blank %}
        <h4
          class="text-sm md:text-xl md:text-white mb-2 md:mb-3">{{ s.subtitle }}</h4>
      {% endif %}

      {% if s.title != blank %}
        <h2
          class="hidden md:block section-title text-3xl leading-7 md:text-4xl md:leading-9 xl:text-6xl xl:leading-[4rem]"
          style="color:{{ section.settings.color }}">{{ s.title }}</h2>
        <h3
          class="block md:hidden Captura section-title text-sm"
          style="color:{{ section.settings.color }}">{{ s.title }}</h3>
      {% endif %}

      {% if s.cta != blank %}
        <a
          class="block mt-3 md:mt-8 {% render "button", size:"medium", color:"green", fullWidth: true %}"
          href="{{ s.ctaLink }}">{{ s.cta }}</a>
      {% endif %}
    </div>
  </div>
</div>
<style>
  .bg-gradiant {
    background: linear-gradient(168.52deg, #4B9B7D 0%, rgba(75, 155, 125, 0.8) 35.48%, #D7E6AF 59.33%, rgba(215, 230, 175, 0.5) 94.77%);
  }

  .section-title span {
    color: #EB5A0A;
  }
  @media(max-width: 639px) {
    .section-title span {
      color: #323338;
      font-weight: 700;
    }
  }
</style>

{% schema %}
  {
    "name": "Home banner",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "label",
        "default": " JUSQU’À -25%",
        "label": "Label"
      },
      {
        "type": "text",
        "id": "subtitle",
        "default": "Personnalisez votre pack",
        "label": "Subtitle"
      },
      {
        "type": "textarea",
        "id": "title",
        "default": "Économisez jusqu’à -25% en achetant un pack de 3, 4 ou 5 produits.",
        "label": "Title"
      }, {
        "type": "text",
        "id": "cta",
        "label": "Button label",
        "default": "Personnaliser mon pack"
      }, {
        "type": "url",
        "id": "ctaLink",
        "label": "Link "
      }, {
        "type": "header",
        "content": "colors"
      }, {
        "type": "color",
        "id": "color",
        "label": "Title color",
        "default": "#1A1A1A"
      }
    ],
    "presets": [
      {
        "name": "Home banner"
      }
    ]
  }
{% endschema %}