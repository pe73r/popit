<div class="md:hidden grid grid-cols-5 gap-2 p-1 w-full max-w-[95%] mx-auto fixed bottom-2 left-[50%] translate-x-[-50%] bg-white rounded-lg z-20">
  <div class="text-center bg-green-light p-2 rounded-md self-center">
    <a href="{{ section.settings.link }}">
      <img
        class="max-w-[22px] mx-auto"
        src="{{ section.settings.image | img_url: 'master' }}"
        alt="{{ section.settings.image.alt }}">
      <p class="text-[10px] text-green mt-1">{{ section.settings.text }}</p>
    </a>
  </div>
  <div class="text-center self-center">
    <a href="{{ section.settings.link_2 }}">
      <img
        class="max-w-[22px] mx-auto"
        src="{{ section.settings.image_2 | img_url: 'master' }}"
        alt="{{ section.settings.image_2.alt }}">
      <p class="text-[10px] mt-1">{{ section.settings.text_2 }}</p>
    </a>
  </div>
  <div class="text-center self-center">
    <a href="{{ section.settings.link_3 }}">
      <img
        class="max-w-[22px] mx-auto"
        src="{{ section.settings.image_3 | img_url: 'master' }}"
        alt="{{ section.settings.image_3.alt }}">
      <p class="text-[10px] mt-1">{{ section.settings.text_3 }}</p>
    </a>
  </div>
  <!-- cart trigger -->
  <div class="text-center self-center">
    <div onClick="openSideCart()" id="cartTrigger">
      <img
        class="max-w-[22px] mx-auto"
        src="{{ section.settings.image_4 | img_url: 'master' }}"
        alt="{{ section.settings.image_4.alt }}">
      <p class="text-[10px] mt-1">{{ section.settings.text_4 }}</p>
    </div>
  </div>
  <!-- menu trigger -->
  <div class="text-center self-center">
    <div onClick="openDrawer()" id="menuTrigger">
      <img
        class="max-w-[22px] mx-auto"
        src="{{ section.settings.image_5 | img_url: 'master' }}"
        alt="{{ section.settings.image_5.alt }}">
      <p class="text-[10px] mt-1">{{ section.settings.text_5 }}</p>
    </div>
  </div>
</div>
<script>
  const openDrawer = () => {
    const trigger = document.querySelector('#shopify-section-header drawer-trigger');
    if (trigger) {
      trigger.click();
    }
  }
</script>
