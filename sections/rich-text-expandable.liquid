<div class="mx-5 md:max-w-3xl md:mx-auto py-10 md:py-10" style="color:{{ section.settings.text_color }}">
  <div class="text-center">
    <h2 class="Fredoka font-bold text-base md:text-4xl" style="color:{{ section.settings.text_color }}">{{ section.settings.title }}</h2>
    <tail-details class="mt-4 text-sm">
      <details-part>
        <div class="text-sm md:text-base {% if section.settings.text_mobile != blank %} hidden md:block {% endif %}">
          {{ section.settings.text }}
        </div>
        {% if section.settings.text_mobile != blank %}
          <div class="block md:hidden text-sm md:text-base">
            {{ section.settings.text_mobile }}
          </div>
        {% endif %}
      </details-part>
      {% if section.settings.more_text != blank %}
        <details-part>
          <div class="text-sm md:text-base {% if section.settings.text_mobile != blank %} hidden md:block {% endif %}">
            {{ section.settings.more_text }}
          </div>
          {% if section.settings.text_mobile != blank %}
            <div class="block md:hidden text-sm md:text-base">
              {{ section.settings.more_text_mobile }}
            </div>
          {% endif %}
        </details-part>
        <see-more class="block mt-5 text-sm underline capitalize accent-color">{{ section.settings.text_link }}</see-more>
        <div class="text-center mt-3">
          <see-less class="hidden justify-center mt-5 text-sm underline capitalize accent-color">{{ section.settings.text_less }}</see-less>
        </div>
      {% endif %}
    </tail-details>
  </div>
</div>
