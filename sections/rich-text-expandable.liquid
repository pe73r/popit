        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#201A1C"
      },
      {
        "type": "text",
        "id": "title",
        "default": "Notre mission",
        "label": "Title"
      },
      {
        "type": "header",
        "content": "content desktop"
      },
      {
        "type": "richtext",
