                <div class="flex items-center justify-center py-1 px-2 bg-[#B7E1F5] rounded-full max-w-[70px]{% if current_tags contains tag %} border border-[#2F2870] {% endif %}">
                  <span class="block text-xs md:text-sm text-[#2F2870]">
                    {{ tag }}
                  </span>
                </div>
