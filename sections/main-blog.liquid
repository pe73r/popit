                <div class="flex items-center justify-center py-1 px-2 bg-[#FEE5C6] rounded-full max-w-[70px] {% if current_tags contains tag %} border border-[#EA5B0C] {% endif %}">
                  <span class="block text-xs md:text-sm text-[#EA5B0C]">
                    {{ tag }}
                  </span>
                </div>
              {%- elsif tag contains "Sommeil" -%}
                <div class="flex items-center justify-center py-1 px-2 bg-[#E9D2E7] rounded-full max-w-[70px]{% if current_tags contains tag %} border border-[#4F2674] {% endif %}">
                  <span class="block text-xs md:text-sm text-[#4F2674]">
                    {{ tag }}
                  </span>
                </div>
